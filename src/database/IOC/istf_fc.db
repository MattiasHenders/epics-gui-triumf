#========================
# Faraday Cup Controller
#========================

record(bi, "$(IOC):SOL"){

   field(DESC, "Controller of the Faraday Cup - IN or OUT via Compressed Air")
   field(INP, "0")
   field(ZNAM, "OFF")
   field(ONAM, "ON")
   field(SCAN, ".1 second")
}

record(bi, "$(IOC):IN"){

   field(DESC, "Sensor for if the Faraday Cup is IN all the way")
   field(INP, "0")
   field(ZNAM, "OFF")
   field(ONAM, "ON")
   field(SCAN, ".1 second")
}

record(bi, "$(IOC):OUT"){

   field(DESC, "Sensor for if the Faraday Cup is OUT all the way")
   field(INP, "1")
   field(ZNAM, "OFF")
   field(ONAM, "ON")
   field(SCAN, ".1 second")
}

record(bi, "$(IOC):HWR"){

   field(DESC, "Sensor if the Cooling Water is flowing or not")
   field(INP, "0")
   field(ZNAM, "OFF")
   field(ONAM, "ON")
   field(SCAN, ".1 second")
}

record(bi, "$(IOC):device"){
field(INP, "1")
field(DESC, "ISTF FC")
}
